{
  "name": "use-mini18n",
  "version": "0.0.5",
  "description": "A simple and minimalistic React hook library for i18n.",
  "main": "./dist/use-mini18n.js",
  "types": "./dist/use-mini18n.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "types:check": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "fmt": "prettier --write \"{src,__test__,examples}/**/*.{ts,tsx}\" \"**/*.md\"",
    "test": "npm run build && jest"
  },
  "keywords": [
    "i18n",
    "react",
    "hooks",
    "internationalization",
    "localization",
    "language",
    "locales"
  ],
  "author": "shinshin86 <shinshin86npm@gmail.com> (https://github.com/shinshin86)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shinshin86/use-mini18n.git"
  },
  "bugs": {
    "url": "https://github.com/shinshin86/use-mini18n/issues"
  },
  "homepage": "https://github.com/shinshin86/use-mini18n#readme",
  "prettier": {
    "singleQuote": true,
    "useTabs": false,
    "tabWidth": 2
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.2",
    "@types/jest": "^26.0.13",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "jest": "^26.4.2",
    "prettier": "^2.1.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.2"
  },
  "peerDependencies": {
    "react": "^16.13.1"
  }
}
