{
  "name": "use-mini18n",
  "version": "0.0.8",
  "description": "A simple and minimalistic React hook library for i18n.",
  "main": "./dist/use-mini18n.js",
  "types": "./dist/use-mini18n.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "types:check": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "fmt": "prettier --write \"{src,__test__,examples}/**/*.{ts,tsx}\" \"**/*.md\"",
    "test": "npm run build && jest"
  },
  "keywords": [
    "i18n",
    "react",
    "hooks",
    "internationalization",
    "localization",
    "language",
    "locales"
  ],
  "author": "shinshin86 <shinshin86npm@gmail.com> (https://github.com/shinshin86)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shinshin86/use-mini18n.git"
  },
  "bugs": {
    "url": "https://github.com/shinshin86/use-mini18n/issues"
  },
  "homepage": "https://github.com/shinshin86/use-mini18n#readme",
  "prettier": {
    "singleQuote": true,
    "useTabs": false,
    "tabWidth": 2
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.0.2",
    "@types/react": "^17.0.31",
    "@types/react-dom": "^17.0.10",
    "jest": "^27.3.1",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  },
  "peerDependencies": {
    "react": "^17.0.2"
  }
}
